<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.swinginpenguin.vmarinov.challengequest" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".QuestsListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".QuestOverviewActivity"
            android:label="@string/title_challenge_detail"
            android:parentActivityName=".QuestsListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ChallengeListActivity" />
        </activity>
    </application>

</manifest>
